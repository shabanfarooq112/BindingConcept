<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="7dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/profile_image"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/member_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Muhammad Talha"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:textStyle="bold"
                ></TextView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="muhammad_talha"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@+id/member_name"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                ></TextView>

           <ImageView
               android:id="@+id/next"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/right_arrow_angle_black"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="15dp"
               android:visibility="gone"
               ></ImageView>

            <ImageView
                android:id="@+id/select_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                ></ImageView>

            <ImageView
                android:id="@+id/diselect_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                ></ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>